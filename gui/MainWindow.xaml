<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        Width="900"
        Height="600"
        x:Class="SWARM_GUI.MainWindow"
        Title="SWARM_GUI">
  <Window.Styles>
    <Style Selector="TabItem.h1">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style Selector="TextBlock.h1">
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style Selector="CheckBox.h1">
      <Setter Property="FontSize" Value="10"/>
      <Setter Property="FontWeight" Value="Bold"/>
    </Style>
  </Window.Styles>
  <StackPanel Background="Green">
    <Menu DockPanel.Dock="Top" Background="White">
      <MenuItem Header="File">
        <MenuItem Header="_Start Swarm" Name="Start_Swarm"/>
        <MenuItem Header="_Stop Swarm" Name="Stop_Swarm"/>
        <Separator />
        <MenuItem Header="_Save And Start Swarm" Name="Save_Swarm"/>
        <MenuItem Header="_Save And Exit" Name="Save_Exit"/>
        <Separator />
        <MenuItem Header="_Exit" Name="Exit"/>
      </MenuItem>
    </Menu>
    <TabControl TabStripPlacement="Left">
      <TabItem Classes="h1" Header="BASIC SETTINGS" Background="White" Foreground="Black">
        <Canvas Height="600">
          <Rectangle Fill="Black" HorizontalAlignment="Left" MinWidth="731" MinHeight="40" ZIndex="0"/>
          
          <DropDown SelectedIndex="0" ZIndex="1" Background="White" MaxHeight="30" BorderBrush="Black" Canvas.Left="10" Canvas.Top="7" Name="Wallet_List" MaxWidth="125" MinWidth="125">
            <DropDownItem Name="Wallet1" Content="Wallet1" />
            <DropDownItem Name="Wallet2" Content="Wallet2" ></DropDownItem>
            <DropDownItem Name="Wallet3" Content="Wallet3" ></DropDownItem>
            <DropDownItem Name="AltWallet1" Content="AltWallet1" ></DropDownItem>
            <DropDownItem Name="AltWallet2" Content="AltWallet2" ></DropDownItem>
            <DropDownItem Name="AltWallet3" Content="AltWallet3" ></DropDownItem>
            <DropDownItem Name="NiceHash_Wallet1" Content="NiceHash_Wallet1" ></DropDownItem>
            <DropDownItem Name="NiceHash_Wallet2" Content="NiceHash_Wallet2" ></DropDownItem>
            <DropDownItem Name="NiceHash_Wallet3" Content="NiceHash_Wallet3" ></DropDownItem>
            <DropDownItem Name="ETH" Content="ETH" ></DropDownItem>
          </DropDown>
          
          <TextBox Name="Symbol" ZIndex="1" Canvas.Left="140" Canvas.Top="7" MinWidth="50" MaxWidth="50" MinHeight="25" MaxHeight="30" BorderBrush="Black" Watermark="Symbol" AcceptsReturn="False" TextWrapping="NoWrap"/>
          <TextBox Name="Address" ZIndex="1" Canvas.Left="195" Canvas.Top="7" MaxHeight="30" VerticalAlignment="Top" HorizontalAlignment="Left" MinWidth="355" MaxWidth="355" MinHeight="25" BorderBrush="Black" Watermark="Enter Address Here. Used With AMD1/NVIDIA1/CPU1/AUTO" AcceptsReturn="False" TextWrapping="NoWrap"/>
          <Button Name="Save_Wallet" ZIndex="1" Canvas.Left="555" Canvas.Top="5" FontWeight="Bold" MinWidth="100" MaxHeight="30" Content="Save Wallet" BorderThickness="2" BorderBrush="Gray" />

          <Rectangle Fill="Black" Canvas.Top="45" MinWidth="180" MinHeight="30" />
          <Rectangle Fill="White" Canvas.Top="75" MinWidth="180" MinHeight="30" />
          <TextBlock Foreground="White" FontWeight="Bold" Text="Location" Canvas.Top="52" Canvas.Left="65"/>
          <RadioButton GroupName="Location" Name="USA" Canvas.Top="81" Canvas.Left="5" Content="USA" FontWeight="Bold" IsDefault="True" IsChecked="True" BorderBrush="Black" Foreground="Black"/>
          <RadioButton GroupName="Location" Name="EUROPE" Canvas.Top="81" Canvas.Left="57" Content="EUROPE" FontWeight="Bold" BorderBrush="Black" Foreground="Black"/>
          <RadioButton GroupName="Location" Name="ASIA" Canvas.Top="81" Canvas.Left="130" Content="ASIA" FontWeight="Bold" BorderBrush="Black" Foreground="Black"/>

          <Rectangle Fill="Black" Canvas.Top="45" Canvas.Left="185" MinWidth="180" MinHeight="30" />
          <Rectangle Fill="Black" Canvas.Top="45" Canvas.Left="495" MinWidth="180" MinHeight="30" />
          <TextBlock Classes="h1" Canvas.Top="52" Canvas.Left="230" Foreground="White" FontWeight="Bold" Text="Pools Available"/>
          <TextBlock Classes="h1" Canvas.Top="52" Canvas.Left="545" Foreground="White" FontWeight="Bold" Text="Current Pools"/>
          <ListBox Classes="h1" Name="Add_Pool_List" Canvas.Left="185" Canvas.Top="75" Width="180" Height="200"></ListBox>
          <Button Classes="h1" Name="Add_Pool_Button" FontWeight="Bold" Canvas.Left="380" Canvas.Top="100" Height="27" Width="115" BorderBrush="Gray" BorderThickness="2" Margin="-8,0" Grid.Row="3" Grid.Column="1" Content="Add Pool ==&gt;"/>
          <Button Classes="h1" Name="Remove_Pool_Button" FontWeight="Bold" Canvas.Left="372" Canvas.Top="150" Height="27" Width="115" BorderBrush="Gray" BorderThickness="2" Content="&lt;== Remove Pool"/>
          <ListBox Classes="h1" Name="Pool_List" Canvas.Left="495" Canvas.Top="75" Width="180" Height="200"></ListBox>

          <Rectangle Fill="Black" Canvas.Top="150" MinWidth="180" MinHeight="30" />
          <TextBlock Foreground="White" FontWeight="Bold" Text="Rigname" Canvas.Top="155" Canvas.Left="65"/>
          <Rectangle Fill="White" Canvas.Top="180" MinWidth="180" MinHeight="95" />
          <TextBox Name="Rig" ZIndex="1" Canvas.Left="40" Canvas.Top="230" MinWidth="100" MaxWidth="100" MinHeight="25" MaxHeight="30" BorderBrush="Black" Watermark="Nickname" AcceptsReturn="False" TextWrapping="NoWrap"/>
          <DropDown SelectedIndex="0" ZIndex="1" Background="White" MinHeight="30" MaxHeight="30" BorderBrush="Black" Canvas.Left="46" Canvas.Top="190" Name="Rig_List" MaxWidth="85" MinWidth="85">
            <DropDownItem Name="Rigname1" Content="Rigname1" />
            <DropDownItem Name="Rigname2" Content="Rigname2" ></DropDownItem>
            <DropDownItem Name="Rigname3" Content="Rigname3" ></DropDownItem>
          </DropDown>
          <TextBlock Foreground="Black" FontWeight="Regular" Text="Enter Name For Group1" Canvas.Top="258" Canvas.Left="25"/>

        </Canvas>
      </TabItem>
      <TabItem Name="Rig_Settings" Classes="h1" Header="RIG SETTINGS" Background="White" Foreground="Black">
        <Grid Name="Grid_1_Rig_Settings" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
          <TextBlock Classes="h1" HorizontalAlignment="Left" Margin="0,5" Text="Type:   " Grid.Row="0" Grid.Column="0"/>
          <CheckBox Classes="h1" HorizontalAlignment="Left" Name="NVIDIA" Grid.Row="0" Margin="-50,0" Grid.Column="1" Content="NVIDIA" Foreground="Black" Background="White" BorderBrush="Black"/>
          <CheckBox Classes="h1" HorizontalAlignment="Left" Name="AMD" Margin="-575,5" Grid.Row="0" Grid.Column="2" Content="AMD" Foreground="Black" Background="White" BorderBrush="Black"/>
          <CheckBox Classes="h1" HorizontalAlignment="Left" Name="CPU" Margin="-510,5" Grid.Row="0" Grid.Column="3" Content="CPU" Foreground="Black" Background="White" BorderBrush="Black"/>
          <CheckBox Classes="h1" HorizontalAlignment="Left" Name="ASIC" Margin="-455,5" Grid.Column="4" Content="ASIC" Foreground="Black" Background="White" BorderBrush="Black"/>
          <CheckBox Classes="h1" HorizontalAlignment="Left" Name="NVIDIA1" Margin="-40,5" Grid.Row="1" Grid.Column="1" Content="NVIDIA1" Foreground="Gray" IsEnabled="false"/>
          <CheckBox Classes="h1" HorizontalAlignment="Left" Name="NVIDIA2" Margin="-40,5" Grid.Row="2" Grid.Column="1" Content="NVIDIA2" Foreground="Gray" IsEnabled="false"/>
          <CheckBox Classes="h1" HorizontalAlignment="Left" Name="NVIDIA3" Margin="-40,5" Grid.Row="3" Grid.Column="1" Content="NVIDIA3" Foreground="Gray" IsEnabled="false"/>
          <CheckBox Classes="h1" HorizontalAlignment="Left" Name="AMD1" Margin="-565,5" Grid.Row="1" Grid.Column="2" Content="AMD1" Foreground="Gray" IsEnabled="false"/>
          <CheckBox Classes="h1" HorizontalAlignment="Left" Name="Auto_Detect" Margin="-540,15" Grid.Row="2" Grid.Column="2" Content="AUTO-DETECT" BorderBrush="Black" Background="White" Foreground="Black" IsEnabled="true"/>
          <TextBlock FontSize="10" Name="Thread_Title" FontWeight="Bold" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="3" Margin="-500,10" Text="CPU Threads:" Foreground="Gray"/>
          <TextBlock Classes="h1" Margin="0,5" HorizontalAlignment="Center" Grid.Row="4" Text="Hive API Key:   "/>
          <TextBox HorizontalAlignment="Left" Height="65" Name="Hive_API" AcceptsReturn="False" Focusable="True" MinWidth="600" MaxWidth="600" Watermark="Your Hive API Key. Giving Hive API Key Allow OC Settings From Website To Work." Grid.Row="4" Grid.Column="1"/>
        </Grid>
      </TabItem>
      <TabItem Classes="h1" Header="SWITCHING SETTINGS" Background="White" Foreground="Black">
      </TabItem>
    </TabControl>
  </StackPanel>
</Window>
